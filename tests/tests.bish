# Run the tests for the bish compiler.

# Make sure we're in the "tests" directory.
def change_dir() {
    dir = cwd()
    dir = @(basename $dir)
    if (dir != "tests") {
        cd("tests")
    }
}

# Run all tests
def run_all() {
    import double
    double.test()

    import io_redirection
    io_redirection.test()

    import fib
    fib.test()

    import ops
    ops.test()

    import vars
    vars.test()

    import booleans
    booleans.test()

    import escaping
    escaping.test()

    import imports
    imports.test()

    import arrays
    arrays.test()

    @(../bish -r args.bish -a -b 3)
    assert(success())

    import side_effect_return_vals
    side_effect_return_vals.test()

    import return_vals
    return_vals.test()

    import conditionals
    conditionals.test()

    import twelve
    twelve.test()
}

change_dir()
run_all()
println("All tests passed.")
